---
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
import '../styles/styles.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nepal Tek Community</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body>
    <Header />

    <main>
      <!-- Hero Section with Background Image -->
      <section class="hero">
        <div class="hero-content">
          <h1 class="title">Welcome to Nepal Tek Community</h1>
          <p class="subtitle">Join us in building an amazing tech community in Nepal!</p>
        </div>
      </section>

      <!-- About Section -->
      <section class="scroll-section about-us">
        <div class="line"></div>
        <div class="content">
          <h2>About Us</h2>
          <p>
            We are a vibrant community of tech enthusiasts dedicated to fostering innovation and learning in Nepal's tech ecosystem. We organize workshops, meetups, and hackathons to bring together like-minded individuals who are passionate about technology.
          </p>
        </div>
      </section>

      <!-- Motive Section -->
      <section class="scroll-section our-motive">
        <div class="line"></div>
        <div class="content">
          <h2>Our Motive</h2>
          <p>
            Our motive is to create a dynamic environment where individuals can grow, share ideas, and contribute to the tech community in Nepal. We aim to inspire innovation through collaborations, learning, and the exchange of ideas.
          </p>
        </div>
      </section>

      <!-- Objective Section -->
      <section class="scroll-section our-objective">
        <div class="line"></div>
        <div class="content">
          <h2>Our Objective</h2>
          <ul>
            <li>Promote tech education and skill development in Nepal.</li>
            <li>Encourage innovation and problem-solving through tech events.</li>
            <li>Build a supportive community for budding tech enthusiasts.</li>
          </ul>
        </div>
      </section>

      <!-- Call to Action -->
      <section class="explore-events">
        <a href="/events" class="cta-button">Explore Events</a>
      </section>
    </main>

    <Footer />

    <style>
      html, body {
        height: 100%;
        margin: 0;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        font-family: 'Roboto', sans-serif;
        background-color: #111;
        color: #fff;
      }

      main {
        flex: 1;
      }

      h1, h2 {
        font-weight: 700;
        line-height: 1.3;
      }

      h1 {
        font-size: 4rem;
        color: #fff;
      }

      h2 {
        font-size: 2.8rem;
        color: #FFA500;
        margin-bottom: 1.5rem;
      }

      p {
        font-size: 1.2rem;
        line-height: 1.8;
        color: #d1d1d1;
        max-width: 800px;
        margin: 1rem auto;
        padding: 0 2rem;
      }

      ul {
        list-style: none;
        padding: 0;
        font-size: 1.2rem;
        color: #d1d1d1;
        max-width: 800px;
        margin: 2rem auto;
      }

      ul li {
        margin-bottom: 1rem;
      }

      .hero {
        background-image: url('/assets/03.avif');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
        text-align: center;
        padding: 2rem;
        position: relative;
        z-index: 1;
      }

      .hero::before {
        content: "";
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background-color: rgba(0,0,0,0.5);
        z-index: 0;
      }

      .hero-content {
        position: relative;
        z-index: 2;
        max-width: 600px;
      }

      .title {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: #fff;
        animation: fadeInUp 1s ease-in-out;
      }

      .subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        opacity: 0.9;
        color: #fff;
        animation: fadeInUp 1.5s ease-in-out;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .scroll-section {
        position: relative;
        display: flex;
        padding: 4rem 2rem;
        text-align: left;
        color: #fff;
        max-width: 1000px;
        margin: 2rem auto;
      }

      .scroll-section .line {
        width: 5px;
        background-color: #FFA500;
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
      }

      .scroll-section .content {
        padding-left: 50px;
        flex: 1;
      }

      .about-us, .our-motive, .our-objective {
        opacity: 0;
        transform: translateX(-100px);
        transition: opacity 1s ease-out, transform 1s ease-out;
      }

      .about-us.visible, .our-motive.visible, .our-objective.visible {
        opacity: 1;
        transform: translateX(0);
      }

      .explore-events {
        text-align: center;
        margin: 4rem auto;
      }

      .cta-button {
        padding: 1rem 2rem;
        background-color: #FFA500;
        color: #fff;
        font-size: 1.2rem;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
      }

      .cta-button:hover {
        background-color: #ff7f00;
        transform: translateY(-5px);
      }

      @media (max-width: 768px) {
        .hero {
          height: 70vh;
        }

        h1 {
          font-size: 2.5rem;
        }

        .cta-button {
          font-size: 1.1rem;
        }

        .about-us p, .our-motive p, .our-objective ul {
          font-size: 1rem;
        }
      }
    </style>

    <script>
      window.addEventListener('scroll', () => {
        const sections = document.querySelectorAll('.about-us, .our-motive, .our-objective');
        sections.forEach(section => {
          const rect = section.getBoundingClientRect();
          if (rect.top <= window.innerHeight * 0.8) {
            section.classList.add('visible');
          }
        });
      });
    </script>
  </body>
</html>
